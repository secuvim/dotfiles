!
! Customize urxvt and xterm
!

#include "/home/stephan/git/solarized/xresources/solarized"

*.cursorColor: #ebac54

!URxvt.termName: rxvt-256color
URxvt.font: xft:DejaVuSansMono\ Nerd\ Font\ Mono:pixelsize=28
URxvt.boldFont: xft:DejaVuSansMono\ Nerd\ Font\ Mono:pixelsize=28:weight=bold
URxvt.letterSpace: -1

! Disable scrollbar
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.scrollBar_floating: false
URxvt.scrollstyle: rxvt

! Enable fullscreen mode
URxvt.perl-ext-common: fullscreen,font-size
URxvt.keysym.F11: perl:fullscreen:switch

! A greyish border surrounding the standard output
URxvt.borderColor: #202020
URxvt.borderless: true
URxvt.internalBorder: 2
URxvt.intensityStyles: false

! enable <S-Tab> in terminal
URxvt.iso14755_52: False
