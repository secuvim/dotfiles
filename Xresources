!
! Customize urxvt and xterm
!

#include "/home/stephan/git/solarized/xresources/solarized"

*.cursorColor: #ebac54

URxvt.termName: rxvt-256color
URxvt.font:xft:DejaVuSansMonoForPowerline\ Nerd\ Font:pixelsize=13:antialias=true:autohint=true:style=Book
URxvt.boldFont:xft:DejaVuSansMonoForPowerline\ Nerd\ Font:pixelsize=13:antialias=true:autohint=true:weight=bold:style=Book

! Disable scrollbar
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.scrollBar_floating: false
URxvt.scrollstyle: rxvt

! Enable fullscreen mode
URxvt.perl-ext-common: fullscreen
URxvt.keysym.F11: perl:fullscreen:switch

! A greyish border surrounding the standard output
URxvt.borderColor: #202020
URxvt.borderless: true
URxvt.internalBorder: 2
URxvt.intensityStyles: false
